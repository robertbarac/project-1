<MainWid>:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

<StartWid>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.9
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: 0.7
    Button:
        size_hint_y: 0.1
        text: "Conectar a la base de datos"
        on_press: root.create_database()
    BoxLayout:
        size_hint_y: 0.2

<DataWid>:
    data: ''
    data_id: ''
    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint_x: 0.9
        size_font: self.width*0.4
        text: root.data
    Button:
        size_hint_x: 0.1
        text: 'Editar'
        on_press: root.update_data(root.data_id)

<NewDataButton>:
    font_size: self.height*0.5 # 50% de la altura de nuestro botón
    text: '+'
    on_press: root.create_new_product()

<DataBaseWid>:
    canvas:
        Color:
            rgb: 0.3,0.3,0.9
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size: self.size #para que el scroll funcione correctamente
        GridLayout:
            id: container # para llamarlo desde databasewid y ponerle tanot widgets como querramos
            padding: [10, 10, 10, 10]
            spacing: 5
            size_hint_y: None
            cols: 1
            row_default_height: root.height*0.2 #tamaño de filas responivo al tamaño de la pantalla. Será del 20% del tamaño de DataBaseWid
            height: self.minimum_height

<LeftLabel@Label>:
    text_size: self.size
    halign: 'left'

<MessagePopup>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: message
            size_hint: 1, 0.8
            text: ""
        Button:
            size_hint: 1, 0.2
            text: "Regresar"
            on_press: root.dismiss()


<InsertDataWid>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.9
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel:
        text: "ID:"
    TextInput:
        id: ti_id
        multiline: False
        hint_text: "ID"
    LeftLabel:
        text: "Nombre:"
    TextInput:
        id: ti_nombre
        multiline: False
        hint_text: "Nombre"
    LeftLabel:
        text: "Marca:"
    TextInput:
        id: ti_marca
        multiline: False
        hint_text: "Marca"
    LeftLabel:
        text: "Costo por unidad:"
    TextInput:
        id: ti_costo
        multiline: False
        hint_text: "Costo"
    LeftLabel:
        text: "Producto en almacén:"
    TextInput:
        id: ti_almacen
        multiline: False
        hint_text: "Almacen"
    BoxLayout:
        size_hint_y: 5 # lo que hace los pone con valor de defecto 1's
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Crear"
            on_press: root.insert_data()
        Button:
            text: "Salir"
            on_press: root.back_to_dbw()

<UpdateDataWid>:
    orientation: 'vertical'
    data_id: ''
    canvas:
        Color:
            rgb: 0.3,0.3,0.9
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel:
        text: 'ID: '+root.data_id
    LeftLabel:
        text: "Nombre:"
    TextInput:
        id: ti_nombre
        multiline: False
        hint_text: "Nombre"
    LeftLabel:
        text: "Marca:"
    TextInput:
        id: ti_marca
        multiline: False
        hint_text: "Marca"
    LeftLabel:
        text: "Costo por unidad:"
    TextInput:
        id: ti_costo
        multiline: False
        hint_text: "Costo"
    LeftLabel:
        text: "Producto en almacén:"
    TextInput:
        id: ti_almacen
        multiline: False
        hint_text: "Almacen"
    BoxLayout:
        size_hint_y: 4
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Actualizar"
            on_press: root.update_data()
        Button:
            text: "Eliminar"
            on_press: root.delete_data()
        Button:
            text: "Salir"
            on_press: root.mainwid.goto_database()

